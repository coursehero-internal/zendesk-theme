<div class="support_body_wrapper">
		<div class="support_body_container">
      <div class="ch_h-search-form_container pt-3 pb-3">
          {{search instant=true placeholder='Search our FAQs'}}
    	</div>
		<h1 class="support_category_heading">{{category.name}}</h1>
		<div id="ch_breadcrumbs">
			{{breadcrumbs}}	
    </div>
		<div class="support_sub-category_container">
			{{#if category.sections}}
      	<div class="section-tree">
					{{#each sections}}
						<section class="section">
					  <h3>
					  	{{#if internal}}
					    	<span class="visibility-internal" data-title="{{t 'internal'}}">
					      	<span class="visibility-internal-icon"></span>
					      </span>
					    {{/if}}
					    <a href="{{url}}">{{name}}</a>
					  </h3>
            {{#if articles}}
					  	<ul class="article-list">
					    	{{#each articles}}
					      	<li {{#if promoted}} class="article-promoted" {{/if}} >
					        	{{#if promoted}}
					          	<span data-title="{{t 'promoted'}}">â˜…</span>
					          {{/if}}
					          <a href="{{url}}">{{title}}</a>
					        </li>
					      {{/each}}
					    </ul>
							{{#if more_articles}}
					    	<a href="{{url}}" class="see-all-articles">
					      	{{t 'show_all_articles' count=article_count}}
					      </a>
					    {{/if}}
              {{else}}
					    	<i class="section-empty">
					      	<a href="{{url}}">{{t 'empty'}}</a>
					      </i>
					  {{/if}}
					  </section>
					{{/each}}
				</div>
				{{else}}
					<i class="category-empty">
						<a href="{{category.url}}">{{t 'empty'}}</a>
					</i>
				{{/if}}
      </div>
  </div>
</div>