      <li>
        <a href="#" id="chat-with-agent" onclick="return SnapEngage.startLink();">
          <i class="fa fa-comments"></i> Chat with an Agent
        </a><br /><!--(Sun-Fri 7AM to 4PM PST)-->
    <!--/ul-->
  </div>
</div>

