<div class="support_body_wrapper">
  <div class="support_body_container">
    <div class="ch_h-search-form_container pt-3 pb-3">
      {{search instant=true placeholder='Search our FAQs'}}
    </div>
    <h1 class="support_article_heading">{{t 'results' query=query count=results_count}}</h1>
    <div id="ch_breadcrumbs">
      {{breadcrumbs}}
			</div>	
    <!--<p>Need help? 
      <a class="support_search_popup_link" href="#support_ticket_form">
        Submit a ticket
      </a>.
    </p>-->
    <section class="search-results-column">
      <h2 class="search-results-subheading">
        {{t 'knowledge_base'}}
      </h2>
      {{#if article_results}}
        <ul class="search-results-list">
          {{#each article_results}}
            <li class="search-result">
              <a href="{{url}}" class="search-result-link">{{title}}</a>
              {{#if vote_sum}}
                <span class="search-result-votes">{{vote_sum}}</span>
              {{/if}}
              <div class="search-result-meta">{{meta}}</div>
              <div class="search-result-description">{{text}}</div>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p>
          {{t 'no_results' query=query}}
          {{#link 'help_center'}}
            {{t 'browse_knowledge_base'}}
          {{/link}}
        </p>
      {{/if}}
    </section>

    {{#if help_center.community_enabled}}
      <section class="search-results-column">
        <h2 class="search-results-subheading">
          {{t 'community'}}
        </h2>
        {{#if post_results}}
          <ul class="search-results-list">
            {{#each post_results}}
              <li class="search-result">
                <a href="{{url}}" class="search-result-link">{{title}}</a>
                <div class="search-result-description">
                  {{text}}
                </div>
                <div class="search-result-meta">
                  <span class="search-result-meta-name">
                    {{#if author.url}}
                      <a href="{{author.url}}" target="_zendesk_lotus">{{author.name}}</a>
                    {{else}}
                      {{author.name}}
                    {{/if}}
                  </span>
                  <span class="search-result-meta-time">{{date created_at}}</span>
                  <span class="search-result-meta-count">
                    {{t 'comments_count' count=comment_count}}
                  </span>
                </div>
              </li>
            {{/each}}
          </ul>
        {{else}}
          <p>
            {{t 'no_results' query=query}}
            {{#link 'topics'}}
              {{t 'browse_community'}}
            {{/link}}
          </p>
        {{/if}}
      </section>
    {{/if}}
			<div class="ch_number-pagination_wrapper">
        {{pagination}}
			</div>
    
	<!--ul class="support_contact_links"-->
    <div class="pt-3">
      <button class="btn btn-secondary" onclick="toggleTicketForm()">
          Contact Us
      </button>
    </div>
